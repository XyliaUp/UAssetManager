<Window x:Class="UAssetManager.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="400" SizeToContent="Height" ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow"
        Title="Progress">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Progress Label -->
        <TextBlock Grid.Row="0" x:Name="ProgressLabel" HorizontalAlignment="Center" Margin="0,0,0,10" 
                   Text="Processing..." TextWrapping="Wrap" />

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1" x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100" Value="0" Margin="0,0,0,15" />

        <!-- Cancel Button -->
        <Button Grid.Row="2" Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Content="{DynamicResource Text.Cancel}" Click="Cancel_Click" />
    </Grid>
</Window>