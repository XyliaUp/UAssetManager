<UserControl x:Class="UAssetManager.Controls.Editors.DistributionVectorEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:UAssetManager.Controls"
             x:Name="Root">

    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox x:Name="DataList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <!-- Color view -->
						<c:ColorPicker Width="110" ColorChanged="OnItemsUpdated"
                                       Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       Visibility="{Binding IsColorMode,ElementName=Root,Converter={StaticResource BooleanToVisibilityConverter}}" />

                        <!-- Vector view -->
						<StackPanel Orientation="Horizontal" Visibility="{Binding IsColorMode,ElementName=Root,Converter={StaticResource BooleanToVisibilityReConverter}}">
							<TextBlock Text="X:" Margin="0,0,2,0" VerticalAlignment="Center" />
							<TextBox Width="100" Text="{Binding Value.X, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0" />
                            <TextBlock Text="Y:" Margin="0,0,2,0" VerticalAlignment="Center" />
							<TextBox Width="100" Text="{Binding Value.Y, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,4,0" />
                            <TextBlock Text="Z:" Margin="0,0,2,0" VerticalAlignment="Center" />
							<TextBox Width="100" Text="{Binding Value.Z, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="1"
                Content="Add Sample"
                Margin="0,4,0,0"
                HorizontalAlignment="Left"
                Width="100"
                Click="OnAddKeyClick" />
    </Grid>
</UserControl>
